rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default rule: Allow public read access, but only authenticated users can write.
    // This is a good starting point for many applications. It allows users to see public
    // content (like doctors, clinics, hospitals) but restricts data creation/modification
    // to those who have an account.
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // You can add more specific rules for collections here as your app grows.
    // For example, to only allow a user to edit their own profile:
    // match /users/{userId} {
    //   allow write: if request.auth != null && request.auth.uid == userId;
    // }
  }
}
